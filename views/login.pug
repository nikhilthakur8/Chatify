extends base
block content 
    if err 
      .container.mt-2 
        .alert.alert-danger(role = "alert") #{err}
    .container.mt-4
      form(action='/user/login', method='post')
        .mb-3
          label.form-label(for='exampleInputEmail1') User Id
          input#exampleInputEmail1.form-control(type='text', aria-describedby='emailHelp', name='userId' required)
        .mb-3
          label.form-label(for='exampleInputPassword1') Password
          input#exampleInputPassword1.form-control(type='password', name='password' required)
        button.btn.btn-success.bg-gradient.bg-opacity-75(type='submit')
          | Submit
    script(src="/script/script.js") 
    